---
const arrowDownRightSrc = "/src/assets/arrow-turn-down-right.svg";

interface Props {
  thumbnail: string;
  title: string;
  category: string;
  date: string;
  scale?: number;
}

const { thumbnail, title, category, date, scale = 1 } = Astro.props as Props;
---

<div class="flex w-full flex-col">
  <div
    style={`transform: scale(${scale});`}
    class="content-start overflow-hidden rounded-xl"
  >
    <img src={thumbnail} alt={title} />
  </div>
  <div class="flex flex-row items-baseline pt-2">
    <img
      src={arrowDownRightSrc}
      alt="Ichiba market project thumbnail"
      class="stroke-2 pr-2"
    />
    <div class="flex flex-col">
      <h2 class="text-sm font-medium">{title}</h2>
      <p class="text-sm font-light">{category} &middot {date}</p>
    </div>
  </div>
</div>
