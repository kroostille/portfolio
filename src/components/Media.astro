---
interface Props {
  type: "video" | "image";
  src: string;
  alt: string;
}

const props = Astro.props;
---

<div class="content-start overflow-hidden rounded-xl border border-neutral-950">
  {
    props.type === "video" ? (
      <video playsinline autoplay loop class="scale-105">
        <source src={props.src} type="video/mp4" />
      </video>
    ) : (
      <img src={props.src} alt={props.alt} />
    )
  }
</div>
