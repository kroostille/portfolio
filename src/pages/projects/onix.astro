---
import ProjectLayout from "../../layouts/ProjectLayout.astro";
import { projects } from "../../lib/projects";
import DefaultCard from "../../components/DefaultCard.astro";
import Media from "../../components/Media.astro";
import PaginationButton from "../../components/PaginationButton.astro";

const project = projects.find((project) => project.id === "onix");
---

<ProjectLayout project={project!}>
  <main class="size-full">
    <div class="flex w-full px-4 pb-52 md:px-8">
      <DefaultCard
        mediaType="video"
        mediaSrc="/assets/projects/onix/onix-setup.mp4"
        style="w-4/6 md:w-5/12 lg:w-4/12"
        justify="start"
        title="Set up wallet"
        showDescription={false}
      />
    </div>
    <div class="mb-52 flex max-w-full overflow-visible">
      <div
        class="flex flex-row flex-nowrap space-x-4 overflow-scroll px-4 md:px-8"
      >
        <div class="flex w-3/6 flex-none md:w-4/12">
          <Media
            type="image"
            src="/assets/projects/onix/onix-settings.png"
            alt="onix-settings"
          />
        </div>
        <div class="flex w-3/6 flex-none md:w-4/12">
          <Media
            type="image"
            src="/assets/projects/onix/onix-account.png"
            alt="onix-settings"
          />
        </div>
        <div class="flex w-3/6 flex-none md:w-4/12">
          <Media
            type="image"
            src="/assets/projects/onix/onix-password.png"
            alt="onix-settings"
          />
        </div>
        <div class="flex w-3/6 flex-none md:w-4/12">
          <Media
            type="image"
            src="/assets/projects/onix/onix-pk.png"
            alt="onix-settings"
          />
        </div>
        <div class="flex w-3/6 flex-none md:w-4/12">
          <Media
            type="image"
            src="/assets/projects/onix/onix-remove.png"
            alt="onix-settings"
          />
        </div>
      </div>
    </div>
    <div class="flex w-full justify-end px-4 pb-52 md:px-8">
      <DefaultCard
        mediaType="video"
        mediaSrc="/assets/projects/onix/onix-overview.mp4"
        style="w-4/6 md:w-5/12 lg:w-4/12"
        justify="end"
        title="Navigate in the wallet"
        showDescription={false}
      />
    </div>
    <div class="flex w-full flex-col px-4 pb-52 md:px-8">
      <div class="flex w-full md:w-4/5">
        <Media
          type="image"
          src="/assets/projects/onix/onix-components.jpg"
          alt="onix UI components"
        />
      </div>
      <div class=`flex flex-row pt-2`>
        <div class=`flex flex-row items-baseline`>
          <img
            src="/assets/arrow-turn-down-right.svg"
            alt="Arrow down right icon"
            class="stroke-2 pr-2"
          />
          <h2 class="text-sm font-medium">UI library</h2>
        </div>
      </div>
    </div>
    <div class="flex flex-row px-4 md:px-8 pb-6 border-b-2 border-dotted">
      <PaginationButton href="ichiba" justify="start" label="Previous" page="Ichiba Market"></PaginationButton>
      <PaginationButton href="shadow-wallet" justify="end" label="Next" page="Shadow Wallet"></PaginationButton>
    </div>
  </main>
</ProjectLayout>

<style>
  main {
    width: 100%;
  }
</style>
