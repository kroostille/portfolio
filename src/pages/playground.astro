---
import BaseLayout from "../layouts/BaseLayout.astro";
import DefaultCard from "../components/DefaultCard.astro";
---

<BaseLayout title="Vaimiti DOCK | Playground">
  <main class="size-full px-4 py-6 md:px-8">
    {/* Hero section */}
    <div class="flex flex-col pt-32 lg:pl-8">
      <div class="flex flex-col lg:w-2/3 lg:place-self-end">
        <div class="flex flex-row items-baseline">
          <p class="pr-0.5 text-3xl font-medium">Playgr</p>
          <img src="/assets/logo.svg" alt="Logo" height="18" width="18" />
          <p class="pl-0.5 text-3xl font-medium">und</p>
        </div>
        <p class="pt-2 text-sm">
          Some of my design, code and animation experiments.
        </p>
      </div>
    </div>
    {/* Section lab */}

    <div
      class="grid grid-flow-row gap-8 pb-40 pt-32 sm:grid-cols-1 md:grid-cols-2 md:gap-4 lg:grid-cols-3 2xl:grid-cols-4"
    >
      <div class="flex flex-col gap-6">
        <DefaultCard
          mediaType="video"
          mediaSrc="/assets/experiments/glitch-logo.mp4"
          style="w-auto"
          justify="start"
          title="Glitch logo • After Effects"
          showDescription={false}
        />
      </div>
      <div class="flex flex-col gap-6">
        <DefaultCard
          mediaType="video"
          mediaSrc="/assets/experiments/figma-button.mp4"
          style="w-auto"
          justify="start"
          title="Button pulse • Figma"
          showDescription={false}
        />
      </div>
      <div class="flex flex-col gap-6">
        <DefaultCard
          mediaType="video"
          mediaSrc="/assets/experiments/neon-line.mp4"
          style="w-auto"
          justify="start"
          title="Neon line • Figma"
          showDescription={false}
        />
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    width: 100%;
  }
</style>
