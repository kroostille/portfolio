---
import BaseLayout from "../layouts/BaseLayout.astro";
import DefaultCard from "../components/DefaultCard.astro";
---

<BaseLayout title="Vaimiti DOCK | Playground">
  <main class="size-full px-4 py-6 md:px-8">
    {/* Hero section */}
    <div class="flex flex-col pt-32 lg:pl-8">
      <div class="flex flex-col lg:w-2/3 lg:place-self-end">
        <div class="flex flex-row items-baseline">
          <p class="pr-0.5 text-3xl font-medium">Playgr</p>
          <img src="/assets/logo.svg" alt="Logo" height="18" width="18" />
          <p class="pl-0.5 text-3xl font-medium">und</p>
        </div>
        <p class="pt-2 text-sm">
          Some of my design, code and animation experiments.
        </p>
      </div>
    </div>
    {/* Section lab */}

    <div
      class="grid grid-flow-row gap-12 pb-40 pt-32 sm:grid-cols-1 md:grid-cols-2 md:gap-4 lg:grid-cols-3 2xl:grid-cols-4"
    >
      <div class="flex flex-col gap-6 md:pt-4">
        <DefaultCard
          mediaType="video"
          mediaSrc="/assets/experiments/glitch-logo.mp4"
          style="w-auto"
          justify="start"
          title="Glitch logo • After Effects"
          showDescription={false}
        />
      </div>
      <div class="flex flex-col gap-6 md:pt-4">
        <DefaultCard
          mediaType="video"
          mediaSrc="/assets/experiments/figma-button.mp4"
          style="w-auto"
          justify="start"
          title="Button pulse • Figma"
          showDescription={false}
        />
      </div>
      <div class="flex flex-col gap-6 md:pt-4">
        <DefaultCard
          mediaType="video"
          mediaSrc="/assets/experiments/neon-line.mp4"
          style="w-auto"
          justify="start"
          title="Neon line • Figma"
          showDescription={false}
        />
      </div>
      <div class="flex flex-col md:pt-4">
        <div
          class="h-full content-start overflow-hidden rounded-lg border border-neutral-800"
        >
          <video playsinline autoplay loop muted class="h-full object-cover aspect-square">
            <source
              src="/assets/experiments/arcade-room.mp4"
              type="video/mp4"
            />
          </video>
        </div>
        <div class=`flex justify-start pt-2`>
          <div class=`flex flex-row pl-1 flex-row items-baseline`>
            <img
              src="/assets/arrow-turn-down-right.svg"
              alt="Arrow down right icon"
              class="stroke-2 pr-2"
            />
            <div class="flex flex-col">
              <h2 class="text-sm font-medium">Interactive Arcade • Rive</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    width: 100%;
  }
</style>
